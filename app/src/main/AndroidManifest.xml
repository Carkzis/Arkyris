<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.arkyris">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Arkyris"
        android:usesCleartextTraffic="true">

        <activity

            android:name=".AboutActivity"
            android:label="@string/about_arkyris"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.Arkyris">

        </activity>

        <activity

            android:name=".sandbox.SandboxActivity"
            android:label="@string/sandbox_label"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.Arkyris">

        </activity>

        <activity android:name=".MainActivity"
            android:screenOrientation="portrait">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <intent-filter>
                <!-- intent with view actions -->
                <action android:name="android.intent.action.VIEW" />
                <!-- any implicit intent -->
                <category android:name="android.intent.category.DEFAULT" />
                <!-- requests for browsable links -->
                <category android:name="android.intent.category.BROWSABLE" />
                <!-- URIs that contain scheme of http and host of developer.android.com -->
                <data android:scheme="https" />
            </intent-filter>

        </activity>

    </application>

</manifest>